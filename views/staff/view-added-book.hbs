{{>main_header}}
{{>staff_header}}

<div class="flex text-gray-400 ml-20 mt-6">
    <a href="/staff" class="px-2">Home</a>
    <a href="/staff/catalogue" class="px-2 border-l"> Catalogue</a>
</div>
<div class="w-3/4 grid grid-cols-1 gap-3 mx-auto p-4 lg:mt-7">
    <p class="text-green-400 font-bold text-lg mb-8">Record was added successfully</p>
    <p class="text-4xl font-bold text-gray-500 capitalize">{{added_book.book_name}}</p>
    <p class="text-2 font-bold text-gray-600">By <span class="font-extrabold capitalize">{{added_book.author}}</span></p>
    <table class="table-fixed mt-8">
        <thead class="border-b-2 border-purple-500 text-lg"> 
            <tr>
                <th class="p-2 bg-purple-500">Call Number</th>
                <th class="p-2 bg-purple-500">Item type</th>
                <th class="p-2 bg-purple-500">Collection</th>
                <th class="p-2 bg-purple-500">Barcode</th>
            </tr>
        </thead>
        <tbody class="text-gray-700">
            <tr>
                <td class="p-2 border-grey-200 text-center text-lg text-xl border-2">{{added_book.call_number}}</td>
                <td class="p-2 border-grey-200 text-center text-lg text-xl border-2 capitalize">{{added_book.item_type}}</td>
                <td class="p-2 border-grey-200 text-center text-lg text-xl border-2 capitalize">{{added_book.collection}}</td>
                <td class="p-2 border-grey-200 text-center text-lg text-xl border-2">{{added_book.barcode}}</td>
            </tr>
        </tbody>
    </table>
</div>