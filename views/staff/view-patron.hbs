{{>main_header}}
{{>staff_header}}
<div class="flex text-gray-400 ml-20 mt-6">
    <a href="/staff" class="px-2">Home</a>
    <a href="/staff/patrons" class="px-2 border-l">Patrons</a>
</div>
<div class="w-3/4 grid grid-cols-1 gap-3 mx-auto p-4 lg:mt-7">
    <p class="text-4xl font-bold mb-3 text-gray-500 capitalize">{{patronDetail.patron_name}} ({{patronDetail.cardNumber}})</p>
    <form action="/staff/checkout" class="grid lg:grid-cols-2 grid-cols-1 gap-3" id="checkoutForm" method="POST"> 
            <div class="hidden">
                <input type="text" id="patron-name-input" name="card_number" value="{{patronDetail.cardNumber}}" placeholder="Card Number" class="hidden text-gray-700 p-2 border bg-blue-50 rounded border-gray-300 focus:outline-none focus:bg-blue-100">
            </div>
            <div class="grid grid-cols-1 space-y-2">
                <input type="text" id="cardNum-input" name="barcode" placeholder="Barcode" class="text-gray-700 p-2 border bg-blue-50 rounded border-gray-300 focus:outline-none focus:bg-blue-100">
            </div>
            <button type="submit" class="p-2 grid grid-cols-1 space-y-2 rounded-lg bg-purple-900 text-white w-1/2 hover:bg-purple-700">Checkout</button>
    </form>
    <table class="table-fixed mt-8">
        
        <thead class="border-b-2 border-purple-500 text-lg text-white"> 
            <tr>
                <th class="p-2 bg-purple-500">Checkedout On</th>
                <th class="p-2 bg-purple-500">Name</th>
                <th class="p-2 bg-purple-500">Author</th>
                <th class="p-2 bg-purple-500">Call Number</th>
                <th class="p-2 bg-purple-500">Item type</th>
                <th class="p-2 bg-purple-500">Collection</th>
                <th class="p-2 bg-purple-500">Barcode</th>
            </tr>
        </thead>
        <tbody class="text-gray-700">
            <p class="text-gray-700">{{msg}}</p>
            {{#each checkoutItems}}
            <tr>
                <td class="p-1 border-grey-200 text-center border-2">{{this._id.date}}</td>
                <td class="p-1 border-grey-200 text-center border-2 capitalize">{{this._id.book_name}}</td>
                <td class="p-1 border-grey-200 text-center border-2 capitalize">{{this._id.author}}</td>
                <td class="p-1 border-grey-200 text-center border-2">{{this._id.call_number}}</td>
                <td class="p-1 border-grey-200 text-center border-2 capitalize">{{this._id.item_type}}</td>
                <td class="p-1 border-grey-200 text-center border-2 capitalize">{{this._id.collection}}</td>
                <td class="p-1 border-grey-200 text-center border-2">{{this._id.barcode}}</td>
            </tr>
            {{/each}}
        </tbody>
        

       
    </table>
</div>




<script src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="static/js/staff.js"></script>
</body>

</html>

     