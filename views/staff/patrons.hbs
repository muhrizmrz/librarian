{{>main_header}}
{{>staff_header}}

<div class="flex text-gray-400 ml-20 mt-6">
    <a href="/staff" class="px-2">Home</a>
</div>

<div class="w-3/4 grid grid-cols-1 mx-auto lg:mt-12 mb-10 border-2 p-8">
    <div class="grid grid-cols-1 space-y-6">
        <p class="text-gray-400 text-3xl font-bold text-center border-b pb-2">Add Patron</p>
        <p class="text-red-600 font-bold mb-8" id="duplicate-patron">{{errorMsg}}</p>
        <form action="/staff/add-patron" id="add-patron-form" class="grid lg:grid-cols-2 grid-cols-1 gap-3" method="POST"> 
            <div class="grid grid-cols-1 space-y-2">
                <label for="book-name-input" class="font-bold text-lg text-gray-500">Name</label>
                <input type="text" id="patron-name-input" name="patron_name" placeholder="Name" class="text-gray-700 p-2 border bg-blue-50 rounded border-gray-300 focus:outline-none focus:bg-blue-100">
            </div>
            <div class="grid grid-cols-1 space-y-2">
                <label for="author-input" class="font-bold text-lg text-gray-500">Card Number</label>
                <input type="text" id="cardNum-input" name="cardNumber" placeholder="Card Number" class="text-gray-700 p-2 border bg-blue-50 rounded border-gray-300 focus:outline-none focus:bg-blue-100">
            </div>
            <button type="submit" class="p-2 rounded-lg bg-purple-900 text-white w-1/4 hover:bg-purple-700 justify-self-end col-span-2 mt-3">Save</button>
        </form>
    </div>

<script
  src="https://code.jquery.com/jquery-3.6.0.js"
  integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
  crossorigin="anonymous"></script>
<script src="/static/js/staff.js" type="text/javascript"></script>